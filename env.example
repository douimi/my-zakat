# Copy this file to .env for local development or env.production for production
# Replace all placeholder values with your actual credentials

# Stripe Configuration (Get these from your Stripe dashboard)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Database Configuration
DATABASE_URL=postgresql://postgres:password@db:5432/myzakat
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Application Security (Generate a strong random key for production)
SECRET_KEY=your-super-secret-key-change-in-production

# Email Configuration (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Email Verification Configuration (Network Solutions)
SMTP_SERVER=netsol-smtp-xxxx.hostingplatform.com
SMTP_PORT=587
SMTP_USERNAME=info@yourdomain.org
SMTP_PASSWORD=************
EMAIL_FROM_NAME=Your App Name

# Application URLs (adjust for your environment)
# For local development, use http://localhost:3000
# For production, use your actual domain (e.g., https://myzakat.org)
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:8000
